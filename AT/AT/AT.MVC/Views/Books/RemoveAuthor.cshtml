@model AT.MVC.Models.Books.RemoveAuthorViewModel

@{
    ViewData["Title"] = "Remove Author";
}

<h1>Remove Author</h1>

<h3>Are you sure you want to remove this author from this book?</h3>
<div>
    <h1>Details</h1>

    <div>
        <h4>Book</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                Title
            </dt>
            <dd class = "col-sm-10">
                @ViewBag.Book.Title
            </dd>
            <dt class = "col-sm-2">
                ISBN
            </dt>
            <dd class = "col-sm-10">
                @ViewBag.Book.ISBN
            </dd>
            <dt class = "col-sm-2">
                Year
            </dt>
            <dd class = "col-sm-10">
                @ViewBag.Book.Year
            </dd>
        </dl>
    </div>

    <div>
        <h4>Author</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                FirstName
            </dt>
            <dd class = "col-sm-10">
                @ViewBag.Author.FirstName
            </dd>
            <dt class = "col-sm-2">
                Last Name
            </dt>
            <dd class = "col-sm-10">
                @ViewBag.Author.LastName
            </dd>
            <dt class = "col-sm-2">
                Email
            </dt>
            <dd class = "col-sm-10">
                @ViewBag.Author.Email
            </dd>
            <dt class = "col-sm-2">
                Birth Date
            </dt>
            <dd class = "col-sm-10">
                @ViewBag.Author.BirthDate
            </dd>
        </dl>
    </div>
    
    <form asp-action="RemoveAuthor">
        @Html.HiddenFor(m => m.AuthorId)
        @Html.HiddenFor(m => m.BookId)
        <input type="submit" value="Remove" class="btn btn-danger"/> |
        <a asp-action="Edit">Back to Edit</a>
    </form>
</div>
