@model IEnumerable<TP1.MVC.Models.FriendViewModel>

@{
    ViewData["Title"] = "Friends";
}

<p>
    <a asp-action="Add">Add Friend</a>
</p>

@using (Html.BeginForm("SelectedFriends", "Friends", FormMethod.Post))
{
    <h2 class="mt-5">My Friends</h2>

    <table class="table">
        <thead>
        <tr>
            <th></th>
            <th>
                Full Name
            </th>
            <th>
                Birth Date
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var friend in Model)
        {
            <tr>
                <td style="text-align: center">
                    <input type="checkbox" name="selectedFriends" value="@friend.Id" checked=@friend.Selected />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => friend.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => friend.BirthDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@friend.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@friend.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <button type="submit" name="selectedFriends">
        Selected Friends
    </button>
}